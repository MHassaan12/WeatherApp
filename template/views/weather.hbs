<!doctype html>
<html lang="en">

<head>
    {{>head}}
</head>

<body>
    {{>header}}

    <!-- main section -->
    <section class="container-fluid main-section ">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="today">Monday</p>
                        <p>
                        <span id="today_date">8</span>
                        <span id="today_month">Feb</span>
                        </p>
                        
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp">
                                <span>0</span>
                                <sup>o</sup>F
                                </p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- footer section -->
     {{>footer}}
     {{!-- <script src="js/main.js"></script> --}}
</body>

</html>